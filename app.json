{
  "expo": {
    "name": "MeuAppM3U",
    "slug": "meuappm3u",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png", 
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "*/"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.emesonmikael.meuappm3u" 
    },
    "android": {
      "package": "com.emesonmikael.meuappm3u", 
      "versionCode": 1,
      "permissions": ["INTERNET"],
      "networkSecurityConfig": {
        "rules": [
          {
            "domain": "*",
            "cleartextTrafficPermitted": true
          }
        ]
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}